    "glob": "^10.3.10"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "htmlhint": "^1.1.4",
    "wrangler": "^3.22.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "clean-css": "^5.3.3",
    "terser": "^5.26.0"
  },
